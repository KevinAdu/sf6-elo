---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import EloProbabilityTable from '../components/EloProbabilityTable.astro';
---

<Layout>
	<Navigation />
	<main class="main-content">
		<div class="container">
			<h1>Elo Rating Reference</h1>
			<p class="description">
				This table shows the probability of winning based on the difference in Elo ratings between two players. 
				A positive rating difference means the first player is higher rated, while a negative difference means they are lower rated.
			</p>
			<EloProbabilityTable />
		</div>
	</main>
</Layout>

<style>
	.main-content {
		padding: 2rem 0;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	h1 {
		color: #22223b;
		font-size: 2.5rem;
		font-weight: 700;
		margin: 0 0 1rem 0;
		font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
	}

	.description {
		color: #6b7280;
		font-size: 1.1rem;
		line-height: 1.6;
		margin: 0 0 3rem 0;
		font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
	}

	@media (max-width: 640px) {
		.container {
			padding: 0 1rem;
		}

		h1 {
			font-size: 2rem;
		}

		.description {
			font-size: 1rem;
		}
	}
</style> 